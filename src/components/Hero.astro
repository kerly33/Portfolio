---
import LinkedIn from "../assets/icons/LinkedIn.astro";
import Mail from "../assets/icons/Mail.astro";
import Badge from "./Badge.astro";
import SocialPill from "./SocialPill.astro";

const personalImageAlt = "Kerly";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-20"
      src="/IMG_6788.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/kerly-victoria-c-p"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajal</Badge>
    </a>
  </div>
  <h1 class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >Hey, soy Kerly</h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200
            [&>strong]:text-yellow-500 [&>strong]font-semibold dark:text-gray-300"
  >
    +2 años de experiencia.
    <strong
      >Ingeniero de Software y Creador de Contenido sobre Programación</strong
    >
    de Barcelona, España 🇪🇸. Especializado en el desarrollo de aplicaciones web únicas.
  </p>

  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:kerlyvictoria21@gmail.com">
        <Mail class="size-4" />
        Contáctame
    </SocialPill>

    <SocialPill href="https://www.linkedin.com/in/kerly-victoria-c-p">
        <LinkedIn class="size-4" />
        LinkedIn
    </SocialPill>
  </nav>
</div>
